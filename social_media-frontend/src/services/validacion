export const validateLink = (link) => {
  const allowedTypes = ['dribbble', 'linkedin', 'github', 'twitter', 'instagram'];
  const urlPattern = /^https?:\/\/[^\s$.?#].[^\s]*$/;

  if (!allowedTypes.includes(link.type)) {
    return { valid: false, message: 'Invalid link type' };
  }

  if (!urlPattern.test(link.url)) {
    return { valid: false, message: 'Invalid URL' };
  }

  return { valid: true };
};
